  "editor.indentSize": "2",
  "editor.detectIndentation": false,
  "search.exclude": {
    "**/lib/CMSIS/samd21a/*": true,
    "**/lib/CMSIS/samd21b/*": true,
    "**/lib/CMSIS/samd21d/*": true,
  },
  "cortex-debug.variableUseNaturalFormat": true,
}